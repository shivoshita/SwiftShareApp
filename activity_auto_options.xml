                android:layout_height="wrap_content"
                android:text="Nashit Alam"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/driver_phone_auto_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 9345678901"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/distance_auto_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="700 m"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />
            <!-- Price TextView -->
            <TextView
                android:id="@+id/price_auto_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: INR 250"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />
            <Button
                android:id="@+id/select_auto_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Ride"
                android:backgroundTint="#E45A04"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </GridLayout>
</LinearLayout>
