                android:textSize="16sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/driver_name_auto_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohan Singh"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/driver_phone_auto_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 9324516789"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/distance_auto_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600 m"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />
            <!-- Price TextView -->
            <TextView
                android:id="@+id/price_auto_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: INR 200"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />
            <Button
                android:id="@+id/select_auto_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Ride"
                android:backgroundTint="#E45A04"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Row 2, Column 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_auto" />
            <TextView
                android:id="@+id/plate_number_auto_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KA 05D 7382"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
