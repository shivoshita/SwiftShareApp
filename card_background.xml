<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Background color -->
    <solid android:color="#1E1A45" />

    <!-- Border (stroke) color and width -->
    <stroke
        android:width="2dp"
        android:color="#e45a04" />

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
