<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#130139">

    <!-- Heading Text for Ride Pool -->
    <TextView
        android:id="@+id/heading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Co-Passengers"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="22dp" />

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Passenger 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_background"
            android:padding="8dp">

            <ImageView
                android:id="@+id/passenger_1_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_person1"
                android:contentDescription="Passenger 1 Image"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/passenger_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kris Tanna"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <TextView
                android:id="@+id/passenger_1_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: +91 9876543210"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/passenger_1_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: 2 km"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Confirm" />
        </LinearLayout>

        <!-- Passenger 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_background"
            android:padding="8dp"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/passenger_2_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_person2"
                android:contentDescription="Passenger 2 Image"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/passenger_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shivoshita Jhalta"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <TextView
                android:id="@+id/passenger_2_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: +91 9123456789"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/passenger_2_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: 1.5 km"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Confirm" />
        </LinearLayout>

    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Passenger 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_background"
            android:padding="8dp">

            <ImageView
                android:id="@+id/passenger_3_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_person3"
                android:contentDescription="Passenger 3 Image"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/passenger_3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanishka B"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <TextView
                android:id="@+id/passenger_3_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: +91 9876501234"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/passenger_3_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: 3 km"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Confirm" />
        </LinearLayout>

        <!-- Passenger 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_background"
            android:padding="8dp"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/passenger_4_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_person4"
                android:contentDescription="Passenger 4 Image"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/passenger_4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Likitha"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <TextView
                android:id="@+id/passenger_4_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: +91 9876547890"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/passenger_4_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: 750 m"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Confirm" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/your_logo" />
</LinearLayout>
